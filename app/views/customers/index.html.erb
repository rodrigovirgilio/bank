<p id="notice"><%= notice %></p>

<h1><%= Customer.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Customer.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to t('.show'), customer %></td>
      </tr>
      <tr>
        <th><%= Account.human_attribute_name(:name) %></th>
        <th><%= Account.human_attribute_name(:balance) %></th>
      </tr>
      <% customer.accounts.each do |account| %>
        <tr>
          <td><%= account.name %></td>
          <td>
            <%= number_to_currency(account.balance, unit: 'R$', separator: ',') %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

