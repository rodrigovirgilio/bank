<%= form_for @customer do |f| %>
  <div class="field">
    <%= label_tag(:name, 'Name:') %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= label_tag(:name, 'Create Accounts:') %><br>
    <%= f.fields_for :accounts do |p| %>
      <%= label_tag(:name, 'Name:') %>
      <%= p.text_field :name %>

      <%= label_tag(:name, 'Balance:') %>
      <%= p.text_field :balance %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
