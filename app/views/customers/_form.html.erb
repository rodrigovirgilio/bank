<%= form_for @customer do |f| %>
  <%= render 'shared/messages', object: @customer %>

  <div class='field'>
    <%=f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <h4><%= label_tag t('.accounts') %></h4>
    <%= f.fields_for :accounts do |p| %>
      <%= p.label :name %>
      <%= p.text_field :name %>

      <%= p.label :balance %>
      <%= p.number_field :balance, class: :text_field, step: :any %>
    <% end %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>
